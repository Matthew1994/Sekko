<android.support.v4.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".viewConctroller.CinemaDetailActivity"
    tools:showIn="@layout/activity_cinema_detail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="loading..."
                    android:id="@+id/select_move_name"

                    android:background="@color/content_gray"
                    android:textColor="@color/content_white"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:paddingRight="10dp"
                    android:paddingLeft="7dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="loading..."
                    android:id="@+id/select_move_id"
                    android:visibility="gone"
                    android:background="@color/content_gray"
                    android:textColor="@color/content_white"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:paddingRight="10dp"
                    android:paddingLeft="7dp"/>
            </LinearLayout>

            <com.example.guanlu.sekko.viewConctroller.GalleryFlow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spacing = "20dp"
                android:id="@+id/order_gallery">
            </com.example.guanlu.sekko.viewConctroller.GalleryFlow>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/content_gray"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="0dp"
                android:padding="0dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:id="@+id/button_bg"
                    android:background="@android:color/background_dark"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="0dp"
                android:padding="0dp">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textColor="@color/content_white"
                    android:id="@+id/button1"
                    android:background="#00000000"
                    android:text="@string/today"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:id="@+id/button2"
                    android:background="#00000000"
                    android:textColor="@color/content_white"

                    android:text="@string/tomorrow"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:id="@+id/button3"
                    android:background="#00000000"
                    android:textColor="@color/content_white"

                    android:text="@string/ttomorrow"/>

            </LinearLayout>


        </RelativeLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/movie_schedule">
        </ListView>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

