<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="@dimen/card_comment_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/line"
        android:padding="10dp"

        android:showDividers="middle">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_movie_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:id="@+id/order_item_movie_name"
                android:text="@string/app_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:visibility="gone"
                android:id="@+id/order_item_label"
                android:text="@string/app_name"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/order_item_movie_img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_item_cinema_name"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/order_item_movie_img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_item_time"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"
                android:layout_below="@id/order_item_cinema_name"
                android:layout_toRightOf="@id/order_item_movie_img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_item_num"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"
                android:layout_below="@id/order_item_time"
                android:layout_toRightOf="@id/order_item_movie_img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_item_price"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"
                android:layout_below="@id/order_item_time"
                android:layout_toRightOf="@id/order_item_num"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src = "@drawable/mark_unused"
                android:id = "@+id/order_item_isused"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>