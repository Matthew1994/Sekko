            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@android:color/white"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/card_comment_vertical_margin"
                android:paddingTop="@dimen/card_comment_vertical_margin" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/person2_img"
                        android:layout_width="60dp"
                        android:layout_height="60dp"

                        android:src="@drawable/sekko"
                        android:elevation="8dp"
                        app:civ_border_width="4dp"
                        app:civ_border_color="#888888"
                        app:layout_scrollFlags="scroll"
                        />
                    <TextView
                        android:id="@+id/person2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/someone"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/person2_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/comment2"
                        android:lineSpacingMultiplier="1.2"
                        />

                    <TextView
                        android:id="@+id/person2_from"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/content_gray"
                        android:text="@string/from2"

                        />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
