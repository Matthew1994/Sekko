<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/content_bg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/current_task_title"
        android:layout_height="@dimen/header_height"
        android:background="@color/purple"
        android:layout_width="fill_parent">


        <TextView
            android:id="@+id/fragment_home_text"
            android:layout_width="wrap_content"
            android:paddingTop="6sp"
            android:paddingBottom="6sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/dating"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textScaleX="1.1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/dating_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/content_white"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            app:tabSelectedTextColor="@color/red_dark"
            app:tabIndicatorColor="@color/red_dark"
            app:tabIndicatorHeight="4dp"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/dating_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



    </LinearLayout>

</LinearLayout>
