<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/content_bg"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.example.guanlu.sekko.CinemaDetailActivity"
            tools:showIn="@layout/activity_cinema_detail">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:id="@+id/cinema_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@android:color/white"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20sp"
                        android:paddingBottom="@dimen/card_vertical_margin"
                        android:paddingTop="@dimen/card_vertical_margin">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cinema_feature"
                            android:layout_marginBottom="10dp"
                            android:lineSpacingMultiplier="1.3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cinema_address"
                            android:layout_marginBottom="10dp"
                            android:layout_below="@id/cinema_feature"
                            android:lineSpacingMultiplier="1.3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cinema_route"
                            android:layout_marginBottom="10dp"
                            android:layout_below="@id/cinema_address"
                            android:lineSpacingMultiplier="1.3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cinema_tel"
                            android:layout_marginBottom="10dp"
                            android:layout_below="@id/cinema_route"
                            android:lineSpacingMultiplier="1.3"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

               <!-- <com.baidu.mapapi.map.MapView
                    android:id="@+id/bmapview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true" />-->



            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/call_menu"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="@dimen/fab_margin"
        app:layout_anchorGravity="right"
        fab:fab_addButtonColorNormal="@color/content_white"
        fab:fab_addButtonColorPressed="@color/content_bg"
        fab:fab_addButtonPlusIconColor="@color/content_gray"
        fab:fab_addButtonSize="mini"
        fab:fab_expandDirection="up">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_call"
            fab:fab_colorNormal="@color/colorCall"
            fab:fab_colorPressed="@color/content_bg"
            fab:fab_size="mini"
            android:src="@drawable/ic_call_black_24dp" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_locate"
            fab:fab_colorNormal="@color/colorOrange"
            fab:fab_colorPressed="@color/orange_dark"
            fab:fab_size="mini"
            android:src="@drawable/ic_pin_drop_black_24dp" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</android.support.design.widget.CoordinatorLayout>
