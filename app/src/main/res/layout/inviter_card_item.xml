<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="@dimen/card_comment_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:divider="@drawable/line"
        android:padding="10dp"
        android:showDividers="beginning">




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/inviter_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:src="@drawable/sekko"
                android:elevation="8dp"
                app:civ_border_width="4dp"
                app:civ_border_color="#888888"
                app:layout_scrollFlags="scroll"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/content_black"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:id="@+id/inviter_name"
                android:text="@string/app_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inviter_age"
                android:background="@color/red"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_gravity="center_horizontal"

                android:textColor="@color/content_white"
                android:textSize="12sp"
                android:text="@string/app_name"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.github.library.bubbleview.BubbleTextVew
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/inviter_words"
                android:text="Hello BubbleTextVew"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="@color/content_black"
                card_view:arrowWidth="8dp"
                card_view:angle="8dp"
                card_view:arrowHeight="10dp"
                card_view:arrowPosition="14dp"
                card_view:arrowLocation="left"
                card_view:bubbleColor="@color/content_bg"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_movie"
                android:layout_marginRight="10dp"
                android:layout_below="@id/inviter_words"
                android:src="@drawable/ic_movie_black_18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inviter_movie"
                android:layout_below="@id/inviter_words"
                android:layout_toRightOf="@id/label_movie"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_location"
                android:layout_marginRight="10dp"
                android:layout_below="@id/label_movie"
                android:src="@drawable/ic_person_pin_circle_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inviter_location"
                android:layout_below="@id/label_movie"
                android:layout_toRightOf="@id/label_location"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_invitee"
                android:layout_marginRight="10dp"
                android:layout_below="@id/label_location"
                android:src="@drawable/ic_favorite_black_18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inviter_invitee"
                android:layout_below="@id/label_location"
                android:layout_toRightOf="@id/label_invitee"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

        </RelativeLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>